<?xml version="1.0" encoding="utf-8"?>
<Include xmlns:xi="http://www.w3.org/2001/XInclude">
  <!-- Base Shapefile layers for style that sit below OSM data -->
  <Style name="world" filter-mode="first">
    <Rule>
      <MinScaleDenominator>750000</MinScaleDenominator>
      <PolygonSymbolizer fill="#f2efe9" />
    </Rule>
  </Style>
  <Layer name="world"
    srs="+proj=merc +a=6378137 +b=6378137 +lat_ts=0.0 +lon_0=0.0 +x_0=0.0 +y_0=0.0 +k=1.0 +units=m +nadgrids=@null +wktext +no_defs +over">
    <StyleName>world</StyleName>
    <Datasource>
     <Parameter name="file"><![CDATA[data/simplified-land-polygons-complete-3857/simplified_land_polygons.shp]]></Parameter>
     <Parameter name="type"><![CDATA[shape]]></Parameter>
   </Datasource>
 </Layer>

 <Style name="coast-poly" filter-mode="first">
  <Rule>
    <MaxScaleDenominator>750000</MaxScaleDenominator>
    <PolygonSymbolizer fill="#f2efe9" />
  </Rule>
</Style>
<Layer name="coast-poly"
  srs="+proj=merc +a=6378137 +b=6378137 +lat_ts=0.0 +lon_0=0.0 +x_0=0.0 +y_0=0.0 +k=1.0 +units=m +nadgrids=@null +wktext +no_defs +over">
  <StyleName>coast-poly</StyleName>
  <Datasource>
   <Parameter name="file"><![CDATA[data/land-polygons-split-3857/land_polygons.shp]]></Parameter>
   <Parameter name="type"><![CDATA[shape]]></Parameter>
 </Datasource>
</Layer>

<Style name="builtup" filter-mode="first">
  <Rule>
    <MaxScaleDenominator>3000000</MaxScaleDenominator>
    <MinScaleDenominator>750000</MinScaleDenominator>
    <PolygonSymbolizer fill="#dddddd" />
  </Rule>
</Style>
<Layer name="builtup"
  srs="+proj=merc +datum=WGS84 +over">
  <StyleName>builtup</StyleName>
  <Datasource>
   <Parameter name="file"><![CDATA[data/world_boundaries/builtup_area.shp]]></Parameter>
   <Parameter name="type"><![CDATA[shape]]></Parameter>
 </Datasource>
</Layer>

<Style name="necountries" filter-mode="first">
  <Rule>
    <MaxScaleDenominator>500000000</MaxScaleDenominator>
    <MinScaleDenominator>50000000</MinScaleDenominator>
    <LineSymbolizer stroke-width="0.5" stroke="#808080" />
  </Rule>
</Style>
<Layer name="necountries"
  srs="+proj=longlat +ellps=WGS84 +datum=WGS84 +no_defs">
  <StyleName>necountries</StyleName>
  <Datasource>
   <Parameter name="file"><![CDATA[data/ne_110m_admin_0_boundary_lines_land/ne_110m_admin_0_boundary_lines_land.shp]]></Parameter>
   <Parameter name="type"><![CDATA[shape]]></Parameter>
 </Datasource>
</Layer>
</Include>
